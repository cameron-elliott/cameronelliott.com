      {{ range .Site.Pages.Children "tags/" }}
      <a class="navbar-item" href="{{ $.Rel .Url }}">
        {{ .Title   }}
      </a>
      {{ end }}
    </div>
    <div class="navbar-end">
      {{/* {{ range $.Site.Params.social }}
