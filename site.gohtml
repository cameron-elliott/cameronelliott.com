      <a class="navbar-item" href="mailto:foo@bar.com" target="_blank">
        <span class="icon">
          <img alt="email" src='/static/img/email.svg'>
        </span>
      </a>
      {{/* {{ with $.Site.Home.OutputFormats.Get "rss" -}}
      <a class="navbar-item" href="{{ .Permalink }}" target="_blank">
